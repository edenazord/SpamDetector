<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- Titolo dell'app -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🛡️ Spam Detector"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_color"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Sottotitolo -->
    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📸 Rileva spam controllando le foto profilo dei contatti"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card per il controllo principale -->
    <LinearLayout
        android:id="@+id/controlCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stato Rilevamento"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="12dp" />

        <Switch
            android:id="@+id/enableSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attiva rilevamento spam"
            android:textSize="16sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Card per lo status -->
    <LinearLayout
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        app:layout_constraintTop_toBottomOf="@id/controlCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Benvenuto nel rilevatore di spam!\n\nAttiva il rilevamento per iniziare."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="monospace" />

        </ScrollView>

    </LinearLayout>

    <!-- Container per i pulsanti -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/permissionsButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="🔐 Concedi Permessi"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="🧪 Test WhatsApp"
            android:textSize="16sp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/primary_color" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>